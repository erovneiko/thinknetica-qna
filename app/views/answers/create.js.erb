$('.answer-errors').html(`<%= render 'shared/errors', resource: @answer %>`);

<% if @answer.persisted? %>
  $('.answers').append(`<%= j render @answer %>`).find('.gist').each(loadGist);
  $('.new-answer #answer_body').val('');
  $('.nested-fields').not(':first').remove();
  $('.nested-fields input').val('');
<% end %>
